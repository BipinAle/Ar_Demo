<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    android:layout_margin="2dp"


    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mainSingleRowFoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/shadow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:padding="10dp"

                >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name :"
                    android:layout_marginRight="10dp"

                    />

                <TextView
                    android:id="@+id/mainSingleRowText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"

                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="3dp"
                android:padding="10dp"

                >

                <TextView
                    android:id="@+id/LifeExpentency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Life Expentency :"
                    android:layout_marginRight="10dp"

                    />

                <TextView
                    android:id="@+id/mainSingleRowLifeExpentency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11 years"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:padding="10dp"

                >

                <TextView
                    android:id="@+id/Freindly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friendly:"
                    android:layout_marginRight="10dp"

                    />

              <RatingBar
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/mainSingleRowFriendlyStar"
                  android:stepSize=".1"
                  android:isIndicator="true"
                  style="?android:attr/ratingBarStyleSmall"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
